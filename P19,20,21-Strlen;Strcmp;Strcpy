/******************************************************************************

                           STRING LENGTH
                           
*******************************************************************************/
//String length
#include <stdio.h>
#include <string.h>
int main()
{
    char arr[]="Siddhesh";
    int len1 = strlen(arr);
    printf("string = %s length =%d\n",arr,len1);
    return 0;
    
}

/******************************************************************************

                            STRING COPY

*******************************************************************************/

#include <stdio.h>
#include <string.h>
int main()
{
    char source[] = "Ice";
    char target[10];
    strcpy(target,source);
    printf("source string = %s\n",source);
    printf("target string = %s\n",target);
    return 0;
}

/******************************************************************************

                            STRING COMPARE

*******************************************************************************/

#include <stdio.h>
#include <string.h>
int main()
{
    char str1[] = "Ice";
    char str2[] = "Cream";
    int i,j;
   i = strcmp(str1,"Hello");
   j = strcmp(str2,"Cream");
   printf("%d,%d\n",i,j);
    return 0;
}
